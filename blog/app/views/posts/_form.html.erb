<div class="form-editing-wrapper">
  <%= form_for @post do |f| %>
    <div class="">
      <%if @post.errors.any? %>
      <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg%></li>
        <% end %>
      </ul>
      <% end %>

      <%= f.label :title %><br>
      <%= f.text_field :title, :class => 'form-input' %>

      <br>
      <br>

      <!-- <%= f.label :content, "Write your article here." %><br> -->
      <div class="nav-wrapper">
        <nav class="tabnav">
          <button type="button" class="tabbutton selected" id="edit-button">
            <i class="fa fa-code" aria-hidden="true"></i>
            Edit File
          </button>
          <button type="button" class="tabbutton" id="preview-button">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Preview changes
          </button>
        </nav>
      </div>
      <div id="textarea-wrapper">
        <%= f.text_area :content, :id => 'editor-textarea', :rows => '20' %>
      </div>

      <div class="form-button-wrapper">
        <%= f.submit %>
      </div>

    </div>
  <% end %>
</div>
