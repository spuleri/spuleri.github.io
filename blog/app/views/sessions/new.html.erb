<% provide(:title, "Admin Log in") %>

<div class="editing-container-no-flex no-flex-padding form-editing-wrapper">
  <h1>Log in</h1>
  <!-- <div class="col-md-6 col-md-offset-3"> -->
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-input' %>

      <br>
      <br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-input' %>

      <br>
      <br>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

	  <br>
	  <br>

      <div class="form-button-wrapper">
        <%= f.submit "Log in", class: "form-button-wrapper" %>
      </div>
    <% end %>

  <!-- </div> -->
</div>
